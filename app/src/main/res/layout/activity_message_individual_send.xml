<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shreevidya.ubs_2.MessageIndividual">


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#CFD8DC"
        android:text="Logout"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="-66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="169dp"
        android:layout_height="168dp"
        app:srcCompat="@drawable/user"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="53dp"
        android:layout_above="@+id/firstnametextview"
        android:layout_alignEnd="@+id/messageedittext"
        android:layout_marginBottom="37dp" />

    <TextView
        android:id="@+id/mavidtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MavID : Dummy Name"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="352dp"
        android:layout_marginRight="28dp"
        android:layout_below="@+id/lastnametextview"
        android:layout_alignStart="@+id/messageedittext"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lastnametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name : Dummy Name"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="311dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/firstnametextview"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/mavidtextview" />

    <TextView
        android:id="@+id/firstnametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name : Dummy Name"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="269dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/messageedittext"
        android:layout_alignEnd="@+id/lastnametextview" />

    <EditText
        android:id="@+id/messageedittext"
        android:layout_width="262dp"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="Write your Message......."
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="425dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/send"
        android:layout_width="78dp"
        android:layout_height="66dp"
        android:text="Send"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="427dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp" />

</RelativeLayout>

